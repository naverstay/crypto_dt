include mixins.pug
doctype html
html(lang='ru')
    +dev_head('Crypto новое событие')

    body.no_transition
        .wrapper
            .main_content
                .section_inner
                    +tag_holder()

                    a.attention_block._warn(href='#')
                        .attention_caption Breaking news
                        p
                            span Indonesia Central Bank: Cryptocurrency Payments 'Not Legitimate'
                            span.attention_link

                    .new_release_holder
                        h2 Submit new event
                        p Know of a crypto event we should add? Tell us about an upcoming industry event you don't see listed. We publish events only after an editor reviewed the text.

                .release_form_holder
                    .section_inner
                        .new_release_form
                            form(action='#')
                                .form_cell
                                    label.label_v2(for='event_title') Title
                                    .input_w
                                        input#event_title.input_v3
                                .form_cell
                                    label.label_v2(for='event_description') Short description
                                    .input_w
                                        input#event_description.input_v3
                                .form_cell
                                    label.label_v2(for='event_content') Details
                                    .input_w
                                        textarea#event_content.input_v3
                                .form_group
                                    .form_cell
                                      .form_group
                                        .form_cell
                                          label.label_v2(for='event_date_start')
                                            span Date&nbsp;
                                            span.clr_gray — start
                                          .input_w
                                            input#event_date_start.input_v3(data-inputmask="'alias': 'mm.dd.yyyy', 'placeholder': 'MM.DD.YYYY', 'clearIncomplete': 'true'")
                                        .form_cell
                                          label.label_v2(for='event_date_end')
                                            span Date&nbsp;
                                            span.clr_gray — end
                                          .input_w
                                            input#event_date_end.input_v3(data-inputmask="'alias': 'mm.dd.yyyy', 'placeholder': 'MM.DD.YYYY', 'clearIncomplete': 'true'")
                                    .form_cell
                                        label.label_v2(for='event_site') Site
                                        .input_w
                                            input#event_site.input_v3
                                .form_group
                                    .form_cell
                                        label.label_v2(for='event_country') Country
                                        .input_w
                                            input#event_country.input_v3.completeIt(data-url='./data/countries.json')
                                    .form_cell
                                        label.label_v2(for='event_city') City
                                        .input_w
                                            input#event_city.input_v3.completeIt(data-url='./data/cities.json')
                                .form_cell
                                    label.label_v2(for='event_files')
                                        span File Upload / Logo / Image
                                        span.clr_gray &nbsp;— min 720x480, max 1mb
                                    .input_w
                                        label.btn_v2.upload_btn.gray_btn_2: span Select file
                                            input#event_files.hide(type='file')
                                .form_group
                                    .form_cell
                                        label.label_v2(for='event_author_email') Your Email
                                        .input_w
                                            input#event_author_email.input_v3
                                    .form_cell
                                        label.label_v2(for='event_author_name') Other contacts
                                        .input_w
                                            input#event_author_name.input_v3

                                .release_summary
                                    .form_group
                                        .form_cell
                                            p &nbsp;

                                        .form_cell
                                            button.btn_v2.btn_violette_2.create_release_btn: span Submit new event

            .nav_holder
                //-+main_menu()
                +search()

            +header()
            +footer()

        +scripts(false, true)
